@model OrganicOption.Models.Rider_Section.RiderModel

<div class="container text-center justify-content-center">
    <div class="row justify-content-center mt-3">
        <div class="card col-lg-6 col-md-6 p-4">
            <h3 class="mt-2 mb-4">Edit Rider Profile</h3>

            <form asp-action="UpdateShift" method="post" enctype="multipart/form-data">
                <div class="text-center justify-content-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <input type="hidden" asp-for="RiderUserId" value="@User.Identity.Name" />

                    <input type="submit" class="btn btn-primary mt-4" style="width: 200px; height: 40px; border-radius: 10px;" value="Finish Session" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>

    .top-bar {
        width: 100%;
        position: relative;
        top: 0;
        left: 0;
        background: #1cb252;
        color: black;
    }

        .top-bar .nav-item {
            margin-right: 20px;
        }


    .card {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-1px);
        transition: all 0.2s ease;
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        margin-bottom: 5px;
    }

    .btn-primary {
        width: 100%;
    }
</style>
