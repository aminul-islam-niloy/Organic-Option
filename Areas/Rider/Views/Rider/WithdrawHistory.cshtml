@model IEnumerable<OrganicOption.Models.WithdrawalHistory>



<br />
<h4 class="text-center"> Withdraw History</h4>
<div class="container">

    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Withdraw Date</th>
                <th>Status</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Amount</td>
                    <td>@item.ConfirmDate.ToString()</td>
                    <td>
                        @if (item.IsConfirmed)
                        {
                            <span class="text-success">Confirmed</span>
                        }
                        else if (item.IsApproved)
                        {
                            <span class="text-warning">Approved</span>
                        }
                        else
                        {
                            <span class="text-danger">Pending</span>
                        }
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>
</div>


<style>
    .top-bar {
        width: 100%;
        position: relative;
        top: 0;
        left: 0;
        background: #1cb252;
        color: black;
    }

        .top-bar .nav-item {
            margin-right: 20px;
        }

    .card {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }
</style>


