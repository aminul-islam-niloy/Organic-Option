@model OrganicOption.Models.Rider_Section.RiderModel




<div class="container text-center justify-content-center">

    <div class="row justify-content-center mt-5">
        <div class="card col-lg-6 col-md-6 p-4">

            <h3 class="mt-2 mb-4">Edit Rider Shift</h3>

            <form asp-action="EditShift" method="post" enctype="multipart/form-data">
                <div class="text-center">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    @if (ViewBag.IsInShift)
                    {
                        <div class="form-group row justify-content-center mb-4">
                            <div class="col-lg-3">
                                <label asp-for="VehicleType"></label>
                            </div>
                            <div class="col-lg-7">
                                <select asp-for="VehicleType" class="form-control">
                                    <option value="">Select Vehicle Type</option>
                                    @foreach (var item in Enum.GetValues(typeof(OrganicOption.Models.Rider_Section.VehicleType)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                                <span asp-validation-for="VehicleType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center mb-4">
                            <div class="col-lg-3">
                                <label asp-for="BagType"></label>
                            </div>
                            <div class="col-lg-7">
                                <select asp-for="BagType" class="form-control">
                                    <option value="">Select Bag Type</option>
                                    @foreach (var item in Enum.GetValues(typeof(OrganicOption.Models.Rider_Section.BagType)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                                <span asp-validation-for="BagType" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary mb-4" name="startShift" value="start">Start Shift</button>
                    }

                    <input type="hidden" asp-for="RiderUserId" value="@User.Identity.Name" />
                    <input type="submit" class="btn btn-primary mt-4" style="width:150px; height:35px; border-radius:10px" value="Save" />
                </div>
            </form>

        </div>
    </div>
</div>

<style>
    .top-bar {
        width: 100%;
        position: relative;
        top: 0;
        left: 0;
        background: #1cb252;
        color: black;
    }

        .top-bar .nav-item {
            margin-right: 20px;
        }

    .card {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-1px);
        transition: all 0.2s ease;
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        margin-bottom: 5px;
    }
</style>
