@model IEnumerable<OrganicOption.Models.Rider_Section.Delivery>

<h2>Delivered Orders - @ViewBag.Period</h2>
<br />
<br />

<a class="btn btn-info" asp-area="Rider" asp-controller="RiderDelivery" asp-action="DeliveredOrders" asp-route-period="weekly">Weekly Delivery History</a>
<a class="btn btn-info" asp-area="Rider" asp-controller="RiderDelivery" asp-action="DeliveredOrders" asp-route-period="monthly">Monthly Delivery History</a>

<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Details</th>
            <th>Customer Address</th>
            <th>Delivery Address</th>
            <th>Shop Name</th>
            <th>Payable Money</th>
            <th>Delivered Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var delivery in Model)
        {
            <tr>
                <td>@delivery.OrderId</td>
                <td>@delivery.ProductDetails</td>
                <td>@delivery.CustomerAddress</td>
                <td>@delivery.DelivyAddress</td>
                <td>@delivery.ShopName</td>
                <td>@delivery.PayableMoney</td>
                <td>@delivery.OrderDeliveredDate</td>
            </tr>
        }
    </tbody>
</table>
