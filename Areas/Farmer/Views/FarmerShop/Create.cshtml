@model OrganicOption.Models.FarmerShop


<h3 class="text-info">Add New Shop</h3>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label asp-for="ShopName"></label>
                    </div>
                    <div class="col-lg-5">
                        <input asp-for="ShopName" class="form-control" />
                    </div>
                    <span asp-validation-for="ShopName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Is Open:</label>
                    </div>
                    <div class="col-lg-5">

                        <input type="checkbox" asp-for="IsShopOpen" />
                    </div>

                </div>


   

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label> Cover Photo:</label>
                    </div>
                    <div class="col-lg-5">
                        <input asp-for="CoverPhoto" class="form-control" type="file" />
                    </div>
                    <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                </div>


              

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Latitude:</label>
                    </div>
                    <div class="col-lg-5">
                        <input type="text" asp-for="Latitude" class="form-control" />
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Longitude:</label>
                    </div>
                    <div class="col-lg-5">
                        <input type="text" asp-for="Longitude" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Contract Information:</label>
                    </div>
                    <div class="col-lg-5">
                        <input type="text" asp-for="ContractInfo" />
                        <span asp-validation-for="ContractInfo"></span>
                    </div>

                </div>




                <input type="hidden" asp-for="FarmerUserId" value="@User.Identity.Name" />



                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />

                </div>


            </div>
            <div class="col-lg-2"></div>
        </form>




        </div>
        <div class="col-lg-3"></div>
    </div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

