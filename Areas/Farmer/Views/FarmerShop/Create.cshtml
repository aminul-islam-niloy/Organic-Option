@model OrganicOption.Models.FarmerShop

<h3 class="text-info text-center">Add New Shop</h3>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="p-4 rounded border">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group row">
                        <label asp-for="ShopName" class="col-lg-3 col-form-label"></label>
                        <div class="col-lg-9">
                            <input asp-for="ShopName" class="form-control" />
                            <span asp-validation-for="ShopName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Is Open:</label>
                        <div class="col-lg-9">
                            <input type="checkbox" asp-for="IsShopOpen" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Cover Photo:</label>
                        <div class="col-lg-9">
                            <input asp-for="CoverPhoto" class="form-control" type="file" />
                            <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Latitude:</label>
                        <div class="col-lg-9">
                            <input type="text" asp-for="Latitude" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Longitude:</label>
                        <div class="col-lg-9">
                            <input type="text" asp-for="Longitude" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Contract Information:</label>
                        <div class="col-lg-9">
                            <input type="text" asp-for="ContractInfo" class="form-control" />
                            <span asp-validation-for="ContractInfo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">NID:</label>
                        <div class="col-lg-9">
                            <input type="text" asp-for="NID" class="form-control" />
                            <span asp-validation-for="NID" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="hidden" asp-for="FarmerUserId" value="@User.Identity.Name" />

                    <div class="form-group text-center mt-4">
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
