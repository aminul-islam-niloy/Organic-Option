@model OrganicOption.Models.FarmerShop

<div class="container mt-5">
 

    <div class="p-4 rounded border text-center justify-content-center" style="width:506px">
        <h3 class="text-danger text-center">Confirm Delete</h3>
        <p class="text-center">Are you sure you want to delete this shop?</p>

        <dl class="row mb-4">
         
                
          
            <dd class="col-sm-8 col-md-9 col-lg-10">
                Shop Name: @Model.ShopName
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <h4 class="mb-4">Do you want to delete this shop?</h4>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
