@model OrganicOption.Models.FarmerShop

<br />

<div class="container">
 
        <div class="row">
            <!-- Left Section: Shop Cover Photo -->
            <div class="col-md-8 mb-4">
                @if (Model.CoverPhoto != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(Model.CoverPhoto)" class="img-fluid rounded" alt="Cover Photo" />
                }
                else
                {
                    <p>No cover photo available</p>
                }
            </div>

            <!-- Right Section: Shop Information -->
            <div class="col-md-4 mb-4">
                <h3 class="mb-3">@Model.ShopName</h3>
                <h4 class="mb-3">@Model.ContractInfo</h4>
                <p><strong>Open Status:</strong> @(Model.IsShopOpen ? "Open" : "Closed")</p>
                <h4 class="mb-3">Total Revenue: @Model.ShopRevenue</h4>
            @*     <a href="@Url.Action("Wallet", "Inventory")" class="btn btn-primary mb-3">My Wallet</a>
            <form asp-action="EditOpenStatus" method="post">
                <label class="switch">
                    <input type="checkbox" name="IsShopOpen" value="true" @(Model.IsShopOpen ? "checked" : "") />
                    <span class="slider round"></span>
                </label>

                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-primary mt-3">Save</button>
