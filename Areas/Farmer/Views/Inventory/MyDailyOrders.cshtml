@model List<OrganicOption.Models.Farmer_Section.DailyOrderInfoViewModel>

<div class="container mt-4">
    <a href="javascript:history.back()" class="btn btn-secondary mb-3"><i class="fa fa-arrow-left"></i> Back</a>
    <h4 class="mb-3">Daily Orders</h4>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Order ID</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Order Time</th>
                        <th scope="col">Products</th>
                        <th scope="col">Total Price</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderInfo in Model)
                    {
                        <tr>
                            <td>@orderInfo.OrderId</td>
                            <td>@orderInfo.CustomerName</td>
                            <td>@orderInfo.Phone</td>
                            <td>@orderInfo.OrderTme.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var productInfo in orderInfo.Products)
                                    {
                                        <li><strong>@productInfo.Name</strong> - Qty: @productInfo.Quantity - Price: @productInfo.Price</li>
                                    }
                                </ul>
                            </td>
                            <td>@orderInfo.TotalPrice</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h4>No orders found for today.</h4>
    }
</div>
