@model OrganicOption.Models.FarmerShop
<br />

<div class="container">
    <a href="javascript:history.back()" class="btn btn-secondary mb-1"><i class="fa fa-arrow-left"></i> Back</a>

<h3 class="text-center mb-2"> Sold Products </h3>


@if (ViewBag.SoldProductsToday != null && ViewBag.SoldProductsToday.Count > 0)
{
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity Sold</th>
                <th>Total Price</th>
                <th>Customer Name</th>
                <th>Customer Phone</th>
                <th>Customer Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var soldProduct in ViewBag.SoldProductsToday)
            {
                <tr>
                    <td>@soldProduct.ProductId</td>
                    <td>@soldProduct.ProductName</td>
                    <td>@soldProduct.QuantitySold</td>
                    <td>@soldProduct.TotalPrice</td>
                    <td>@soldProduct.CustomerName</td>
                    <td>@soldProduct.CustomerPhone</td>
                    <td>@soldProduct.CustomerAddress</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No products were sold today.</h4>
}
</div>