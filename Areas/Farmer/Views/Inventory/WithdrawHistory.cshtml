@model IEnumerable<OrganicOption.Models.WithdrawalHistory>
<br />

<div class="container">

    <a href="javascript:history.back()" class="btn btn-secondary mb-3"><i class="fa fa-arrow-left"></i> Back</a>
    <h4 class="text-center justify-content-center">Withdraw History</h4>

    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Withdraw Date</th>
                <th>Status</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Amount</td>
                    <td>@item.ConfirmDate.ToString()</td>
                    <td>
                        @if (item.IsConfirmed)
                        {
                            <span class="text-success">Confirmed</span>
                        }
                        else if (item.IsApproved)
                        {
                            <span class="text-warning">Approved</span>
                        }
                        else
                        {
                            <span class="text-danger">Pending</span>
                        }
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>
</div>
