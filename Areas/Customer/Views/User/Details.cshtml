@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Details";
}
<div class="container mt-2">
    <a href="javascript:history.back()" class="btn btn-secondary mb-2">
        <i class="fa fa-arrow-left"></i> Back
    </a>

</div>
<div class="container mt-7" style="margin-top:18px">
<div class="d-flex justify-content-center mt-7">
    <div class="card  text-center justify-content-center" style="width:700px;">
        <div class="card-header">
            <h4 class="card-title text-info"> User Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Details" method="post" id="user-form" enctype="multipart/form-data">
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <h3>@ViewBag.message</h3>

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group row">
                                <label asp-for="UserName" class="col-3 col-form-label"></label>
                                <div class="col-9">
                                    <input asp-for="UserName" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Email" class="col-3 col-form-label"></label>
                                <div class="col-9">
                                    <input asp-for="Email" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="FirstName" class="col-3 col-form-label"></label>
                                <div class="col-9">
                                    <input asp-for="FirstName" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="LastName" class="col-3 col-form-label"></label>
                                <div class="col-9">
                                    <input asp-for="LastName" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-3 col-form-label"></label>
                                <div class="col-9">
                                    <input asp-for="PhoneNumber" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="DateOfBirth" class="col-3 col-form-label">Date of Birth</label>
                                <div class="col-9">
                                    <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Address" class="col-3 col-form-label">Address</label>
                                <div class="col-9">
                                    <input asp-for="Address" class="form-control" readonly />
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 d-flex justify-content-center align-items-center">
                            <div class="text-center">
                                <label asp-for="ProfilePicture"></label>
                                @if (Model.ProfilePicture != null)
                                {
                                    <img id="profilePicture" class="img-fluid rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfilePicture))" />
                                }
                                else
                                {
                                    <img id="profilePicture" class="img-fluid rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" src="" />
                                }
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                       
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
