@model OnlineShop.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <h4 class="text-info text-center">Delete User</h4>
        <br />
        <form asp-action="Delete" method="post" id="user-form" enctype="multipart/form-data">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <h3 class="text-center">@ViewBag.message</h3>

                <div class="form-group row">
                    <label asp-for="UserName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="PhoneNumber" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="PhoneNumber" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="FirstName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="LastName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary" value="Delete" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
