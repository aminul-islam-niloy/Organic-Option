@model OnlineShop.Models.ApplicationUser

@{
    ViewData["Title"] = "Logout";
}
<br />

<div class="d-flex justify-content-center">
    <div class=" col-md-4 col-lg-4">
        <h4 class="text-info text-center">Logout User</h4>
        <form asp-action="Logout" method="post" id="user-form" enctype="multipart/form-data">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <h4>@ViewBag.message</h4>
                <h4 class="text-center">Do you want to logout this user?</h4>
                <br />

                <div class="form-group row">
                    <label asp-for="UserName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="FirstName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="LastName" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-5">
                    <input type="submit" class="btn btn-primary" value="Logout" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
