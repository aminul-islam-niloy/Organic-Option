@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-4">
    <h3 class="text-center mb-4">Order Details for Order : @Model.OrderNo</h3>

    <div class="row mb-4">
        <!-- Customer Information -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Customer Information</h4>
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>Address:</strong> @Model.CustomerAddress</p>
                    <p><strong>Email:</strong> @Model.CustomerEmail</p>
                    <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                </div>
            </div>
        </div>

        <!-- Payment Information -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Payment Information</h4>
                    <p><strong>Payment Method:</strong> @Model.PaymentMethods :  @Model.CardInfo</p>
                    <p><strong>Total Price: ৳</strong> @Model.TotalPrice</p>
                    <p><strong>Delivery Charge: ৳</strong> @Model.TotalDelivaryCharge</p>
                    <p><strong>Discount:% </strong> @Model.TotalDiscount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Information -->
    <h4 class="text-center mb-3">Products</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.Quantity</td>
                        <td>$@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-6">
            <!-- Farmer Shop Information -->
            <div class="card shadow-sm mb-4 ">
                <div class="card-body">
                    <h4 class="card-title">Farmer Shop Information</h4>
                <p><strong>Shop ID:</strong> @Model.ShopId</p>
                <br />
                <a class="btn btn-warning" href="@Url.Action("Shop", "FarmerShop", new { area = "Farmer", shopId = @Model.ShopId })">Visit Shop</a>
            </div>
            </div>

        </div>
        <div class="col-md-6">
            <!-- Rider Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">Rider Information</h4>
                    <p><strong>Rider ID:</strong> @ViewBag.RiderId</p>
                    <p><strong>Name:</strong> @ViewBag.RiderName</p>
                    <p><strong>Phone:</strong> @ViewBag.RiderPhone</p>
                </div>
            </div>
        </div>
    </div>
 
   
</div>

<style>
    .card-title {
        font-weight: 600;
        color: #000;
        border-bottom: 2px solid #000;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
        background-color: #000;
        color: white;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #f0ad4e;
        color: white;
    }

        .btn-warning:hover {
            background-color: #ec971f;
            border-color: #ec971f;
        }
</style>
