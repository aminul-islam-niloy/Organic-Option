@model IEnumerable<OnlineShop.Models.OrderDetails>


<div class="container mt-2">
    <a href="javascript:history.back()" class="btn btn-secondary ">
        <i class="fa fa-arrow-left"></i> Back
    </a>

    <h3 class="mb-2" style="margin:2px; font-weight:600; font-size:25px; padding:2px; text-align:center">Cash On Delivary </h3>


    <table id="myTable" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th> Condition</th>
                <th>Payment Condition</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Product.Name</td>
                    <td>@order.Quantity</td>
                    <td>৳@order.Price</td>
                    <td>@order.Order.Name</td>
                    <td>@order.Order.Email</td>
                    <td>@order.Order.OrderCondition</td>
                   <td>
                        @if (order.Order.PaymentMethods == PaymentMethods.CashOnDelivery && order.Order.OrderCondition == OrderCondition.Delivered)
                        {
                            <span>Paid</span>
                        }
                        @if (order.Order.PaymentMethods == PaymentMethods.CashOnDelivery && order.Order.OrderCondition != OrderCondition.Delivered)
                        {
                            <span>Unpaid</span>
                        }
                        
                   </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}