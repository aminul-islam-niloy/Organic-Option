@model OrganicOption.Models.Blogs.BlogPost

<div class="container mt-5">
    <h4 class=" text-center mb-4" style="font-size:30px">@Model.Title</h4>

    <div class="text-center mb-4">
        <img src="@Model.Image" class="img-fluid rounded shadow-sm" alt="@Model.Title" style="max-width: 100%; height: 300px;" />
    </div>

    <p class="text-muted text-center mb-4">Posted on @Model.PostedDate.ToString("MMMM dd, yyyy")</p>

    <div class="full-description">
        @Html.Raw(Model.FullDescription)
    </div>

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-secondary ">Back to List</a>
    </div>
</div>

<style>
    .full-description p {
        margin-bottom: 1.5rem;
        font-size: 1.125rem;
        line-height: 1.6;
        color: #212529;
    }

    .full-description h3 {
        margin-top: 2rem;
        font-weight: bold;
        color: #343a40;
    }

    .full-description img {
        max-width: 100%;
        height: auto;
        margin: 1.5rem 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .full-description blockquote {
        font-size: 1.2rem;
        margin: 2rem 0;
        padding: 1rem;
        background: #f8f9fa;
        border-left: 4px solid #343a40;
        color: #495057;
        font-style: italic;
    }
</style>
