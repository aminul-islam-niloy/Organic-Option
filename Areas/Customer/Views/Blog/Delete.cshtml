@model OrganicOption.Models.Blogs.BlogPost

<div class="container">
    <h2>Delete Blog Post</h2>
    <h3>Are you sure you want to delete this post?</h3>
    <div class="card mb-4">
        <img src="@Model.Image" class="card-img-top" alt="@Model.Title">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.ShortDescription</p>
            <p class="card-text"><small class="text-muted">Posted on @Model.PostedDate.ToString("MMMM dd, yyyy")</small></p>
        </div>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
