@model OrganicOption.Models.Blogs.BlogPost

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm mb-4">
                <img src="@Model.Image" class="card-img-top" alt="@Model.Title" style="height: 300px; object-fit: cover;">
                <div class="card-body text-center">
                    <h3 class="card-title mb-3">Are you sure you want to delete this post?</h3>
                    <h5 class="card-title mb-3">@Model.Title</h5>
                    <p class="card-text mb-3">@Model.ShortDescription</p>
                    <p class="card-text mb-3"><small class="text-muted">Posted on @Model.PostedDate.ToString("MMMM dd, yyyy")</small></p>
                </div>
                <div class="card-footer text-center mt-3">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mx-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary mx-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
