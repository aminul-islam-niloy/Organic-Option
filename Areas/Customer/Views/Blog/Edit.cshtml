@model OrganicOption.Models.Blogs.BlogPost

<div class="container mt-5">
    <h3 class="text-center mb-4">Edit Blog Post</h3>

    <form asp-action="Edit" enctype="multipart/form-data" style="margin:50px">
        <input type="hidden" asp-for="Id" />

        <!-- Title -->
        <div class="form-group mb-4">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Short Description -->
        <div class="form-group mb-4">
            <label asp-for="ShortDescription" class="control-label"></label>
            <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>

        <!-- Full Description -->
        <div class="form-group mb-4">
            <label asp-for="FullDescription" class="control-label"></label>
            <textarea asp-for="FullDescription" class="form-control" rows="6"></textarea>
            <span asp-validation-for="FullDescription" class="text-danger"></span>
        </div>

        <!-- Image Section -->
        <div class="form-group mb-4 text-center">
            <label>Current Image</label><br />
            <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded shadow-sm mb-3" style="max-width: 200px;" /><br />
            <label for="Image">Change Image</label>
            <input type="file" name="image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary ">Update</button>
            <a asp-action="Index" class="btn btn-secondary  ml-3">Cancel</a>
        </div>
    </form>
</div>

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 0.375rem;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        border-radius: 0.375rem;
    }

    .text-center {
        text-align: center;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .rounded {
        border-radius: 0.375rem;
    }

    .shadow-sm {
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .ml-3 {
        margin-left: 1rem;
    }
</style>
