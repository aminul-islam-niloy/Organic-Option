@using OnlineShop.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <br />
        <div class="col-lg-12 mt-3 ">
            <h4 class="text-center" style="font-size:25px"> Product List</h4>
        </div>
    </div>


    <div>
        <table class="display table table-striped border" id="myTable">
            <thead>
                <tr class="table-info">
                    <th>@Html.DisplayNameFor(c => c.Image)</th>
                    <th>@Html.DisplayNameFor(c => c.Name)</th>
                    <th>@Html.DisplayNameFor(c => c.Price)</th>
                    <th>@Html.DisplayNameFor(c => c.IsAvailable)</th>
                    <th>@Html.DisplayNameFor(c => c.ProductTypeId)</th>
                    <th>@Html.DisplayNameFor(c => c.Quantity)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/@item.Image" style="max-width: 50px; max-height: 50px;" /></td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.IsAvailable</td>
                        <td>@item.ProductTypes.ProductType</td>
                        <td>@item.Quantity</td>
                        <td style="width: 150px">
                            <div class="btn-group">
                                <a asp-action="EditProduct" asp-area="Farmer" asp-controller="FarmerShop" class="btn btn-success" asp-route-id="@item.Id"> <i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="ProductDetails" asp-area="Farmer" asp-controller="FarmerShop" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i></a>
                                <a asp-action="ProductDelete" asp-area="Farmer" asp-controller="FarmerShop" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

  
    </script>
    }
