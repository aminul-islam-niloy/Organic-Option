@model IEnumerable<IGrouping<string, OrganicOption.Models.Blogs.ProductPrice>>

@{
    ViewBag.Title = "Product Prices";
}

<div class="container mt-4">
    <h3 class="text-center text-info mb-4 small-font-size">Daily Product Prices</h3>

    @foreach (var group in Model)
    {
        <h3 class="text-center text-primary mb-3 small-font-size">@group.Key</h3>

        <div class="table-responsive">
            <table class="table table-striped table-bordered small-font-size">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Updated Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in group)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price Tk</td>
                            <td>@item.UpdatedDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


    <style>
        /* Adjust font sizes and padding for better readability */
        h3 {
            font-size: 1.6rem;
            font-weight: 800;
        }

        h4 {
            font-size: 1.25rem;
            font-weight: 400;
        }

        table th, table td {
            font-size: 1rem;
        }

        /* Smaller font size and padding for buttons */
        .btn-primary {
            font-size: 0.9rem;
            padding: 0.375rem 0.75rem;
        }

        /* Custom classes for small screens */
        .small-font-size {
            font-size: 0.875rem;
        }

        .smaller-btn {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }
    </style>
