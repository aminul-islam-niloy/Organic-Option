@model IEnumerable<OnlineShop.Models.OrderDetails>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<div class="container mt-5">
    <h2>Card Orders</h2>
    <table id="cardOrdersTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Card Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Product.Name</td>
                    <td>@order.Quantity</td>
                    <td>৳@order.Price</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.StripeSessionId</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#cardOrdersTable').DataTable({
            "paging": true,
            "ordering": true,
            "searching": true
        });
    });
</script>

