@model OnlineShop.Areas.Admin.Model.RoleUserVm

@{
    ViewData["Title"] = "Assign";
}

<div class="container">
    <br />
    <h3 class="text-info text-center">Assign Role</h3>
    <form asp-action="Assign" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <h3 class="text-center mb-4">@ViewBag.mgs</h3>

            <div class="form-group row mb-3">
                <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control">
                        <option value="">Select a user</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="RoleId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control">
                        <option value="">Select a role</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary" value="Assign" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
