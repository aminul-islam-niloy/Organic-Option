@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-12 text-center">
            <h3 class="text-info">Assign User Role</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-info">
                        <tr>
                            <th>User Name</th>
                            <th>Role Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.UserRoles)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.RoleName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
