@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="text-center">
        <h3 class="mt-2">@ViewData["Title"]</h3>
        <hr />
        <h4 class="mt-2">Enter your email.</h4>
    
        <div class="row mt-2 ">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group ">
                        <input asp-for="Input.Email" class="form-control" style="width:400px"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" style="margin-left:50PX;width:300px" class="btn btn-success mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
